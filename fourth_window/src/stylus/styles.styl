* 
  margin 0
  padding 0
  box-sizing border-box

body 
  font-family Arial, sans-serif
  background-color #FFEBEE
  color #333

.header 
  text-align center
  background-color #FF4081
  padding 20px
  border-bottom 2px solid #D81B60
  position fixed
  top 0
  left 0
  width 100%
  z-index 1000
  color white

.content 
  width 100%
  margin-top 80px

.main-column 
  width 75%
  float left

.post 
  margin 20px 0
  padding 20px
  background-color #FFFFFF
  border 2px solid #FF80AB
  overflow hidden
  border-radius 10px
  box-shadow 0 4px 8px rgba(0, 0, 0, 0.1)

.post-image 
  width 30%
  float left
  margin-right 20px
  height 150px
  overflow hidden
  border-radius 5px

.post-image img 
  width 100%
  height 100%
  object-fit cover

.post-content 
  width 65%
  float left

.post h2 
  font-size 24px
  margin-bottom 10px
  color #D81B60

.post p 
  font-size 14px
  color #666

.sidebar 
  width 25%
  float right
  background-color #FFFFFF
  padding 20px
  border-left 2px solid #FF80AB

.sidebar-item 
  margin-bottom 30px

.sidebar h3 
  margin-bottom 10px
  font-size 18px
  color #FF4081

.sidebar p 
  margin-bottom 20px
  font-size 14px
  color #666

.content::after 
  content ""
  display table
  clear both

@media (max-width: 768px) 
  .main-column,
  .sidebar 
    float none
    width 100%
    margin 0

  .post-image 
    width 100%
    float none
    margin-right 0
    height auto

  .post-content 
    width 100%
    float none
